<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.jiandiscover.MainActivity">
    <LinearLayout
        android:id="@+id/llayout_bottom_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
       <ImageView
           android:id="@+id/ic_homepage_fragment"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:src="@drawable/ic_homepage_fragment"
           android:clickable="true" />
        <ImageView
            android:id="@+id/ic_music_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_music_fragment"
            android:clickable="true" />
        <ImageView
            android:id="@+id/ic_download_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_donwload_fragment"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/ic_other_fragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_other_fragment"
            android:clickable="true"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/llayout_bottom_guide">
    </FrameLayout>
</RelativeLayout>
